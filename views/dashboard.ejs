        <!-- Code edited from https://canvasjs.com/docs/charts/how-to/render-chart-by-accepting-datapoints-from-user-input/ -->
        <script type="text/javascript">
          window.onload = function() {
            var dataPoints = [];
            var yvalues = [];
            var chart = new CanvasJS.Chart("chartContainer", {
              title: {
                text: "$ Amount Donated To Your Community Through Communal"
              },
              data: [{
                type: "line",
                dataPoints
              }]
            });

            function addDataPointsAndRender() {
              yvalues.push(
                Number(document.getElementById("yValue").value)
              )
              dataPoints.push({
                x: yvalues.length - 1,
                y: yvalues.reduce((a, b) => a + b, 0)
              })
              chart.render();
            }
            var renderButton = document.getElementById("renderButton");
            renderButton.addEventListener("click", addDataPointsAndRender);
          }
        </script>
